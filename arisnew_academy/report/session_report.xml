<?xml version='1.0' encoding='utf-8'?>
<odoo>
    <data>
        <report
            id="action_report_arisnew_session"
            model="arisnew.session"
            string="Session Report"
            report_type="qweb-html"
            name="arisnew_academy.report_session"
            file="arisnew_academy.report_session"
        />

        <template id="report_session" name="report_session">
            <t t-call="web.html_container">
                <t t-foreach="docs" t-as="doc">
                    <t t-call="web.external_layout">
                        <div class="page">
                            <h3 class="text-center">
                                Session Report
                                <br/>
                                <small><span t-esc="doc.name"/></small>
                            </h3>
                            <p><b>Course :</b> <span t-field="doc.course_id"/></p>
                            <p><b>Instructor :</b> <span t-field="doc.instructor_id"/></p>

                            <table class="table table-bordered table-sm">
                                <tr>
                                    <th>No</th>
                                    <th>No Registrasi</th>
                                    <th>Student</th>
                                </tr>
                                <t t-set="no" t-value="1"/>
                                <tr t-foreach="doc.attendee_ids" t-as="attn">
                                    <td><span t-esc="no"/></td>
                                    <td><span t-esc="attn.name"/></td>
                                    <td><span t-esc="attn.student_id.name"/></td>
                                    <t t-set="no" t-value="no+1"/>
                                </tr>
                            </table>
                        </div>
                    </t>
                </t>
            </t>
        </template>
        
    </data>
</odoo>